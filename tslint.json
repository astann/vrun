{
    "extends": "tslint:recommended",
    "rules": {
        "no-unused-variable": true,
        "prefer-const": false,
        "no-console": [false],
        "max-line-length": {
            "options": [120]
        },
        "class-name": true,
        "eofline": true,
        "indent": [
            true,
            "spaces"
        ],
        "interface-name": [
            true,
            "always-prefix"
        ],
        "max-file-line-count": [
            true,
            1000
        ],
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-debugger": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-namespace": false,
        "no-reference": true,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-first"
            }
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "triple-equals": [
            true,
            "allow-null-check",
            "allow-undefined-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "use-isnan": true
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        },
        "eofline": true,
        "no-consecutive-blank-lines": true,
        "no-trailing-whitespace": true,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-first"
            }
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ]
    }
}
